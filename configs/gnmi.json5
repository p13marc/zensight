// Example gNMI bridge configuration
{
  // Zenoh connection settings
  zenoh: {
    mode: "peer",
    // connect: ["tcp/localhost:7447"],  // Uncomment for client mode
  },

  // gNMI bridge settings
  gnmi: {
    // Key expression prefix for publishing telemetry
    key_prefix: "zensight/gnmi",

    // Serialization format: "json" or "cbor"
    serialization: "json",

    // Target devices to subscribe to
    targets: [
      {
        // Device name (used in key expressions)
        name: "router01",

        // gRPC endpoint
        address: "192.168.1.1:9339",

        // Authentication (optional)
        credentials: {
          username: "admin",
          password: "admin",
        },

        // TLS settings (optional)
        tls: {
          enabled: false,
          skip_verify: false,
          // ca_cert: "/path/to/ca.crt",
          // client_cert: "/path/to/client.crt",
          // client_key: "/path/to/client.key",
        },

        // gNMI encoding: JSON, JSON_IETF, PROTO, ASCII
        encoding: "JSON_IETF",

        // Subscription paths
        subscriptions: [
          {
            // OpenConfig interface counters
            path: "/interfaces/interface/state/counters",
            mode: "SAMPLE",
            sample_interval_ms: 10000,  // 10 seconds
          },
          {
            // Interface operational state
            path: "/interfaces/interface/state/oper-status",
            mode: "ON_CHANGE",
          },
          {
            // System information
            path: "/system/state",
            mode: "SAMPLE",
            sample_interval_ms: 60000,  // 1 minute
          },
        ],
      },

      // Example: Another device with different paths
      // {
      //   name: "switch01",
      //   address: "192.168.1.2:9339",
      //   credentials: {
      //     username: "admin",
      //     password: "admin",
      //   },
      //   encoding: "JSON",
      //   subscriptions: [
      //     {
      //       path: "/network-instances/network-instance/protocols/protocol/bgp/neighbors",
      //       mode: "ON_CHANGE",
      //     },
      //   ],
      // },
    ],
  },

  // Logging settings
  logging: {
    level: "info",  // trace, debug, info, warn, error
  },
}
